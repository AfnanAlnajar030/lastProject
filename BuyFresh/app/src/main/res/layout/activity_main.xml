<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dl"
    android:theme="@style/NavigationDrawerStyle"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/farm_one"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            tools:srcCompat="@drawable/farm_first"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="330dp"
            android:layout_marginTop="-70dp"
            />

        <ImageView
            android:id="@+id/box"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="50dp"
            android:alpha="0.7"
            android:background="@drawable/black_square"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/box"
            android:layout_alignTop="@id/box"
            android:layout_alignRight="@id/box"
            android:text="أهلاً بكم"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/tajawal_bold" />
        <ImageView
            android:id="@+id/small_box"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="15dp"
            android:alpha="0.7"
            android:background="@drawable/black_square" />
        <TextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/small_box"
            android:layout_alignTop="@id/small_box"
            android:layout_alignRight="@id/small_box"
            android:text="إختر النوع:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/tajawal_medium"
            android:padding="5dp"/>


        <Button
            android:id="@+id/herbs"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignTop="@id/small_box"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="215dp"
            android:background="@drawable/white_square"
            android:fontFamily="@font/tajawal_bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            />


        <Button
            android:id="@+id/veggies"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignLeft="@id/herbs"
            android:layout_alignTop="@id/small_box"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/white_square"
            android:fontFamily="@font/tajawal_bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fruits"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignTop="@id/veggies"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/white_square"/>

        <TextView
            android:id="@+id/herbsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ورقيات"
            android:layout_alignRight="@id/herbs"
            android:layout_alignTop="@id/herbs"
            android:fontFamily="@font/tajawal_bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:elevation="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/veggieText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خضروات"
            android:layout_alignRight="@id/veggies"
            android:layout_alignTop="@id/veggies"
            android:fontFamily="@font/tajawal_bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:elevation="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/fruitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فواكه"
            android:layout_alignRight="@id/fruits"
            android:layout_alignTop="@id/fruits"
            android:fontFamily="@font/tajawal_bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:elevation="5dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/herbImage"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/herbsText"
            android:layout_alignRight="@id/herbs"
            android:layout_marginTop="25dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/plant"
             android:elevation="5dp"/>

        <ImageView
            android:id="@+id/veggieImage"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/veggieText"
            android:layout_alignRight="@id/veggies"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            android:src="@drawable/vegetables"
            android:elevation="5dp"/>

        <ImageView
            android:id="@+id/fruitImage"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/fruitText"
            android:layout_alignRight="@id/fruits"
            android:layout_marginTop="20dp"
            android:layout_marginRight="135dp"
            android:src="@drawable/fruit_btn"
            android:elevation="5dp"/>


    </RelativeLayout>




</FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity = "start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigatio_menu"
        android:background="#7AF48D"
        />
</androidx.drawerlayout.widget.DrawerLayout>