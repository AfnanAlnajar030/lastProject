<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/images"
        android:layout_width="370dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/white_square"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        />



    <TextView
        android:id="@+id/product"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textAlignment="viewEnd"
        android:layout_alignLeft="@id/weight"
        android:layout_marginLeft="125dp"
        android:layout_alignRight="@id/images"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:padding="3dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="@font/tajawal_medium"/>

    <TextView
        android:id="@+id/weight"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="weight"
        android:textAlignment="center"
        android:layout_alignLeft="@id/price"
        android:layout_marginLeft="85dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="@font/tajawal_medium"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/images"
        android:layout_alignRight="@id/price"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:fontFamily="@font/tajawal_medium"
        android:padding="10dp"
        android:text="price"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="30sp" />



</RelativeLayout>