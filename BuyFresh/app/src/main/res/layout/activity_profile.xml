<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dl"
    android:theme="@style/NavigationDrawerStyle">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/farm_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/farm_fourth"
            android:scaleType="center"
            android:layout_alignBottom="@id/nameees"
            android:layout_marginBottom="-250dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="-400dp"
            android:elevation="-1dp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_alignBottom="@id/farm_three"/>

        <ImageView
            android:id="@+id/green_header"
            android:layout_width="270dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/green_square"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:elevation="3dp"/>

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الملف الشخصي:"
            android:fontFamily="@font/tajawal_bold"
            android:textSize="30sp"
            android:elevation="10dp"
            android:textColor="#000000"
            android:layout_alignTop="@id/green_header"
            android:layout_alignRight="@id/green_header"
            android:layout_alignLeft="@+id/green_header"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/nameees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المستخدم"
            android:fontFamily="@font/tajawal_bold"
            android:textSize="30sp"
            android:elevation="100dp"
            android:textColor="#FFFFFF"
            android:layout_alignTop="@id/titleTxt"
            android:layout_alignRight="@id/green_header"
            android:layout_alignLeft="@+id/green_header"
            android:textAlignment="center"
            android:layout_marginTop="80dp"/>

        <ImageView
            android:id="@+id/white_box"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:layout_alignTop="@id/nameees"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/white_square"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/updateProfile"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="حفظ المعلومات"
            android:fontFamily="@font/tajawal_bold"
            android:background="@drawable/green_square"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@id/passwordTwo"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="امسح ملفك الشخصي"
            android:fontFamily="@font/tajawal_bold"
            android:textSize="16sp"
            android:elevation="10dp"
            android:textColor="#000000"
            android:layout_alignRight="@id/green_header"
            android:layout_alignLeft="@+id/green_header"
            android:textAlignment="center"
            android:layout_alignTop="@id/updateProfile"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/emailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البريد الإليكتروني:"
            android:fontFamily="@font/tajawal_bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignTop="@id/white_box"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@id/white_box"
            android:layout_marginRight="13dp" />

        <TextView
            android:id="@+id/email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البريد الإليكتروني"
            android:fontFamily="@font/tajawal_medium"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignTop="@id/white_box"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/passTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تغيير اسم المستخدم:"
            android:fontFamily="@font/tajawal_medium"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignTop="@id/emailTxt"
            android:layout_marginTop="100dp"
            android:layout_alignRight="@id/white_box"
            android:layout_marginRight="13dp"
            android:elevation="5dp"/>

        <ImageView
            android:id="@+id/blm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/black_square"
            android:layout_alignRight="@id/nameees"
            android:layout_alignLeft="@id/nameees"
            android:layout_alignBottom="@id/nameees"
            android:layout_alignTop="@id/nameees"
            android:alpha="0.7"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="-1dp"
            android:elevation="-1dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/black_square"
            android:alpha="0.7"
            android:layout_alignTop="@id/passTxt"
            android:textAlignment="center"
            android:hint="اسم المستخدم"
            android:textColor="#FFFFFF"
            android:layout_marginTop="60dp"
            android:textColorHint="#FFFFFF"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/passwordTwo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/black_square"
            android:alpha="0.7"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_alignTop="@id/password"
            android:textAlignment="center"
            android:hint="اسم المستخدم"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity = "start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigatio_menu"
        android:background="#7AF48D"/>
</androidx.drawerlayout.widget.DrawerLayout>